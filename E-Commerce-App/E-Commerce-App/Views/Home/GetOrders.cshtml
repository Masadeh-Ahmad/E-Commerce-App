@model IEnumerable<E_Commerce_App.Models.OutOrder>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "GetOrders";
}

<h2>Order</h2>


@if(Model == null)
{
    <h2>There is no Orders</h2>
}
else{
    int count = 0;
    foreach(var order in Model){
        int STT = 0;
        count++;
        <table class="cart" border="1">
                <tr>
                    <th>STT (@count)</th>
                                              <th>@order.username</th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total Price</th>

                </tr>
                
                @foreach (var item in order.Item)
                {
                string txt_class = "quantity_" + item.Product.Id;
                STT++;
                int total = item.Product.price * item.Quantity;
                <tr>
                    
                    <td>@STT</td>

                    <td>@item.Product.Name</td>
                    <td><img src="@item.Product.ProductImage" width="100" height="100" /></td>
                    <td><span>@item.Quantity</span></td>
                    <td>@item.Product.price</td>
                    <td>@total</td>
                </tr>
               }

            </table>
    }
}
