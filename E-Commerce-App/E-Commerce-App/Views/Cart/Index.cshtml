@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<E_Commerce_App.Models.Item>

@{
    ViewData["Title"] = "Index";

}

<div class="list-cart">
   
        @{
            int STT = 0;
            @if(Model == null)
            {
                <h1>The cart is Empty</h1>
            }
            else
            {
               <table class="cart" border="1">
                <tr>
                    <th>STT</th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total Price</th>
                    <th>Delete</th>
                </tr>
                @foreach (var item in Model)
                {
                string txt_class = "quantity_" + item.Product.Id;
                STT++;
                int total = item.Product.price * item.Quantity;
                <tr>
                    <td>@STT</td>
                    <td>@item.Product.Name</td>
                    <td><img src="@item.Product.ProductImage" width="100" height="100" /></td>
                    <td><input type="number" class="@txt_class" value="@item.Quantity" /></td>
                    <td>@item.Product.price</td>
                    <td>@total</td>
                    <td><a asp-controller="Cart" asp-action="deleteCart" asp-route-id="@item.Product.Id">Delete</a></td>
                </tr>
               }
               <tr><th>
               <a asp-controller="Cart" asp-action="Order" >Order</a>
               </th></tr>
            </table>
            }
            
        }

    
</div>